{
	"name": "obsidian-project-garden",
	"version": "1.0.3",
	"description": "See all your projects in one place",
	"main": "main.js",
	"scripts": {
		"build": "npm-run-all --parallel build:js:production build:css build:manifest",
		"build:manifest": "cp manifest.json dist/manifest.json",
		"build:js:production": "node esbuild.config.mjs production",
		"build:js:dev": "node esbuild.config.mjs",
		"build:css": "yarn postcss ./src/main.css -o ./dist/styles.css",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"deploy": "cp dist/main.js dist/styles.css manifest.json \"/Users/admin/Library/Mobile Documents/iCloud~md~obsidian/Documents/Everything/.obsidian/plugins/obsidian-project-garden\"",
		"watch:deploy": "chokidar dist/main.js dist/styles.css manifest.json -c \"yarn deploy\"",
		"watch:css": "chokidar \"src/**/*.{tsx,css}\" -c \"yarn build:css\"",
		"watch:js": "npm-run-all --parallel build:js:dev watch:css"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"chokidar-cli": "^3.0.0",
		"esbuild": "^0.15.17",
		"esbuild-sass-plugin": "^2.4.2",
		"npm-run-all": "^4.1.5",
		"obsidian": "latest",
		"postcss-cli": "^10.1.0",
		"postcss-import": "^15.0.1",
		"postcss-modules": "^6.0.0",
		"postcss-nested": "^6.0.0",
		"tailwindcss": "^3.2.4",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"@deanc/esbuild-plugin-postcss": "^1.0.2",
		"autoprefixer": "^10.4.13",
		"classnames": "^2.3.2",
		"daisyui": "^2.42.1",
		"overmind": "^28.0.2",
		"overmind-react": "^29.0.2",
		"postcss": "^8.4.19",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"theme-change": "^2.2.0"
	}
}
